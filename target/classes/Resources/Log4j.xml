<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
   <File name="File" fileName="${basepath}/prints.log" bufferedIO="false" advertiseURI="file://path/to/output.log" advertise="true">
    </File>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>